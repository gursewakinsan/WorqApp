<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorqApp.Views.CompanyDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:WorqApp.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:fontawesome="clr-namespace:WorqApp.Helper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Notification - (To do)"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid
            Margin="0,40,0,0"
            BackgroundColor="White"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="84" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ImageButton
                Grid.Row="0"
                Grid.Column="0"
                Margin="20,0,0,0"
                BackgroundColor="Transparent"
                Command="{Binding CloseCommand}"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="MaterialFontFamily"
                        Glyph="{x:Static fontawesome:NoffaPlusAppFlatIcons.ArrowLeft}"
                        Size="25"
                        Color="Black" />
                </ImageButton.Source>
            </ImageButton>

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="0"
                BackgroundColor="Transparent"
                FontFamily="SFProRegularFontFamily"
                FontSize="17"
                HorizontalTextAlignment="Center"
                Text="WORQ"
                TextColor="Black"
                VerticalTextAlignment="Start" />

            <Frame
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,-5,20,0"
                Padding="0"
                BackgroundColor="#E6F7FE"
                CornerRadius="22"
                HasShadow="False"
                HeightRequest="44"
                HorizontalOptions="EndAndExpand"
                IsClippedToBounds="True"
                VerticalOptions="StartAndExpand"
                WidthRequest="44">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ChildrenMissingCommand}" />
                </Frame.GestureRecognizers>
                <Label
                    FontFamily="MaterialFontFamily"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.AlarmNote}"
                    TextColor="#3DB9EC"
                    VerticalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChildrenMissingCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Frame>

            <StackLayout Grid.Row="1" Grid.ColumnSpan="3">
                <ImageButton
                    Grid.Row="0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    HeightRequest="140"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="140">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="MaterialFontFamily"
                            Glyph="{x:Static fontawesome:NoffaPlusAppFlatIcons.QrCode}"
                            Size="140"
                            Color="Black" />
                    </ImageButton.Source>
                </ImageButton>

                <Label
                    Margin="10,10,10,0"
                    FontFamily="SFProRegularFontFamily"
                    FontSize="23"
                    HorizontalOptions="CenterAndExpand"
                    LineBreakMode="TailTruncation"
                    MaxLines="1"
                    Text="{Binding DisplayCompanyName}"
                    TextColor="Black" />

                <StackLayout
                    Margin="0,0,0,10"
                    HeightRequest="125"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    Spacing="40"
                    VerticalOptions="EndAndExpand">
                    <Grid
                        RowSpacing="8"
                        VerticalOptions="StartAndExpand"
                        WidthRequest="70">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <Frame
                            Grid.Row="0"
                            Padding="0"
                            BackgroundColor="#E6F7FE"
                            CornerRadius="30"
                            HasShadow="False"
                            HeightRequest="60"
                            HorizontalOptions="EndAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="StartAndExpand"
                            WidthRequest="60">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AdminCommand}" />
                            </Frame.GestureRecognizers>
                            <Label
                                FontFamily="MaterialFontFamily"
                                FontSize="28"
                                HorizontalTextAlignment="Center"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Admin}"
                                TextColor="#3DB9EC"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AdminCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>
                        <Label
                            Grid.Row="1"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            MaxLines="1"
                            Text="Admin"
                            TextColor="#989D9E"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <Grid
                        RowSpacing="8"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>

                        <Frame
                            Grid.Row="0"
                            Padding="0"
                            BackgroundColor="#3DB9EC"
                            CornerRadius="50"
                            HasShadow="False"
                            HeightRequest="100"
                            HorizontalOptions="EndAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="StartAndExpand"
                            WidthRequest="100">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnScanQrClicked" />
                            </Frame.GestureRecognizers>
                            <Label
                                FontFamily="MaterialFontFamily"
                                FontSize="40"
                                HorizontalTextAlignment="Center"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.CreditCardScan}"
                                TextColor="White"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnScanQrClicked" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>

                        <Label
                            Grid.Row="1"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            Text="Scan QR"
                            TextColor="#989D9E"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnScanQrClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <Grid
                        RowSpacing="8"
                        VerticalOptions="StartAndExpand"
                        WidthRequest="70">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>

                        <Frame
                            Grid.Row="0"
                            Padding="0"
                            BackgroundColor="#E6F7FE"
                            CornerRadius="30"
                            HasShadow="False"
                            HeightRequest="60"
                            HorizontalOptions="EndAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="StartAndExpand"
                            WidthRequest="60">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AppStoreCommand}" />
                            </Frame.GestureRecognizers>
                            <Label
                                FontFamily="MaterialFontFamily"
                                FontSize="28"
                                HorizontalTextAlignment="Center"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Apps}"
                                TextColor="#3DB9EC"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AppStoreCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>

                        <Label
                            Grid.Row="1"
                            FontSize="14"
                            HorizontalTextAlignment="Center"
                            Text="Appstore"
                            TextColor="#989D9E"
                            VerticalTextAlignment="Center" />
                    </Grid>
                </StackLayout>
            </StackLayout>

            <Image
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Aspect="Fill"
                Source="icon_vurve_bottom_gray_big.png" />

            <StackLayout
                Grid.Row="2"
                Grid.ColumnSpan="3"
                HeightRequest="175"
                Spacing="0"
                VerticalOptions="EndAndExpand">
                <CarouselView
                    BackgroundColor="Transparent"
                    HorizontalScrollBarVisibility="Never"
                    IndicatorView="indicatorView"
                    ItemsSource="{Binding DaycareList}"
                    PositionChanged="OnCarouselViewPositionChanged"
                    VerticalOptions="CenterAndExpand">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid ClassId="{Binding Id}" RowSpacing="0">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GridOnGestureRecognizerTapped" />
                                </Grid.GestureRecognizers>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <StackLayout
                                    Grid.Row="0"
                                    ClassId="{Binding Id}"
                                    HorizontalOptions="CenterAndExpand"
                                    Orientation="Horizontal"
                                    Spacing="14"
                                    VerticalOptions="EndAndExpand">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnGestureRecognizerTapped" />
                                    </StackLayout.GestureRecognizers>
                                    <Label
                                        ClassId="{Binding Id}"
                                        FontFamily="MaterialFontFamily"
                                        FontSize="25"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding HeadingIcon}"
                                        TextColor="{Binding IconColor}"
                                        VerticalTextAlignment="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="LabelOnGestureRecognizerTapped" />
                                        </Label.GestureRecognizers>
                                    </Label>

                                    <Label
                                        ClassId="{Binding Id}"
                                        FontAttributes="Bold"
                                        FontFamily="SFProDisplayBoldFontFamily"
                                        FontSize="25"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Heading}"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="LabelOnGestureRecognizerTapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>

                                <Label
                                    Grid.Row="1"
                                    ClassId="{Binding Id}"
                                    FontFamily="SFProRegularFontFamily"
                                    FontSize="17"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding SubHeading}"
                                    TextColor="Black"
                                    VerticalTextAlignment="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="LabelOnGestureRecognizerTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <IndicatorView
                    x:Name="indicatorView"
                    Margin="0,10,0,20"
                    HorizontalOptions="CenterAndExpand"
                    IndicatorColor="LightGray"
                    SelectedIndicatorColor="Red" />

                <controls:CustomButton
                    x:Name="btnLearnMore"
                    Margin="40,0,40,25"
                    Padding="0"
                    BackgroundColor="White"
                    Clicked="OnLearnMoreButtonClicked"
                    CornerRadius="25"
                    FontFamily="SFProSemiboldFontFamily"
                    HeightRequest="50"
                    Text="LEARN MORE"
                    TextColor="Red"
                    VerticalOptions="EndAndExpand" />
            </StackLayout>

            <controls:CustomBusyIndicator
                Grid.RowSpan="3"
                Grid.ColumnSpan="3"
                IsVisible="{Binding IsBusy}" />

            <!--<Grid
				Grid.Row="2"
				Grid.Column="0"
				RowSpacing="0"
				VerticalOptions="EndAndExpand">
				<ImageButton
