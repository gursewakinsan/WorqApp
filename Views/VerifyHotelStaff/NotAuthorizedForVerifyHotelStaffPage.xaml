<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorqApp.Views.VerifyHotelStaff.NotAuthorizedForVerifyHotelStaffPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontawesome="clr-namespace:WorqApp.Helper"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="True"
    BackgroundColor="#6163EC"
    IsBusy="{Binding IsBusy}"
    NavigationPage.HasNavigationBar="False">
    <Grid>
        <Image Aspect="AspectFill" Source="error_message_bg.png" />

        <Frame
            Margin="8"
            Padding="32,35,32,35"
            BackgroundColor="#181A1F"
            CornerRadius="40"
            HasShadow="False"
            IsClippedToBounds="True"
            VerticalOptions="EndAndExpand">
            <StackLayout Spacing="0">
                <Label
                    FontAttributes="Bold"
                    FontFamily="PoppinsBoldFontFamily"
                    FontSize="30"
                    HorizontalOptions="StartAndExpand"
                    Text="Not authorized"
                    TextColor="White" />

                <Label
                    Margin="0,10,0,20"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="16"
                    LineBreakMode="TailTruncation"
                    LineHeight="1.2"
                    MaxLines="2"
                    Opacity="0.7"
                    Text="You are not authorised to access the instabox available on this location."
                    TextColor="White" />

                <StackLayout
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal"
                    Spacing="6">
                    <BoxView
                        BackgroundColor="White"
                        CornerRadius="3"
                        HeightRequest="6"
                        Opacity="0.32"
                        WidthRequest="6" />

                    <BoxView
                        BackgroundColor="White"
                        CornerRadius="3"
                        HeightRequest="6"
                        Opacity="0.32"
                        WidthRequest="6" />

                    <BoxView
                        BackgroundColor="#6263ED"
                        CornerRadius="3"
                        HeightRequest="6"
                        WidthRequest="20" />
                </StackLayout>

                <Frame
                    Margin="0,30,0,0"
                    Padding="0"
                    BackgroundColor="#6263ED"
                    CornerRadius="12"
                    HasShadow="False"
                    HeightRequest="56"
                    IsClippedToBounds="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNotAuthorizedTapped" />
                    </Frame.GestureRecognizers>
                    <StackLayout
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalOptions="CenterAndExpand">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNotAuthorizedTapped" />
                        </StackLayout.GestureRecognizers>
                        <Label
                            FontFamily="PoppinsSemiBoldFontFamily"
                            FontSize="16"
                            Text="Submit"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNotAuthorizedTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
                            FontFamily="MaterialFontFamily"
                            FontSize="25"
                            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ArrowRight}"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNotAuthorizedTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>