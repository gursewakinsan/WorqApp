                                                FontFamily="PoppinsBoldFontFamily"
                                                FontSize="18"
                                                HorizontalTextAlignment="Start"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding GuestName}"
                                                TextColor="White"
                                                VerticalTextAlignment="Center" />

                                            <Label
                                                FontFamily="PoppinsRegularFontFamily"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Opacity="0.5"
                                                TextColor="White">
