                                            BackgroundColor="Transparent"
                                            BorderColor="White"
                                            CornerRadius="16"
                                            HasShadow="False"
                                            HeightRequest="80"
                                            IsClippedToBounds="True"
                                            Opacity="0.2"
                                            VerticalOptions="StartAndExpand">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnFrameInserviceInfoTapped" />
                                            </Frame.GestureRecognizers>
                                        </Frame>

