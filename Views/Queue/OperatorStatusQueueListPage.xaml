                    Grid.Column="0"
                    FontFamily="MaterialFontFamily"
                    FontSize="25"
                    HorizontalTextAlignment="Center"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.HomeOutline}"
                    TextColor="#5B5B79"
                    VerticalTextAlignment="Center" />

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontFamily="MaterialFontFamily"
                    FontSize="25"
                    HorizontalTextAlignment="Center"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.SearchIcon}"
                    TextColor="#5B5B79"
                    VerticalTextAlignment="Center" />

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="#6263ED"
                    CornerRadius="22"
                    FontFamily="MaterialFontFamily"
                    FontSize="25"
                    HeightRequest="44"
                    HorizontalOptions="CenterAndExpand"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Plus}"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="44" />

                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    FontFamily="MaterialFontFamily"
                    FontSize="25"
                    HorizontalTextAlignment="Center"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.BellOutline}"
                    TextColor="#5B5B79"
                    VerticalTextAlignment="Center" />

                <Label
                    Grid.Row="0"
                    Grid.Column="4"
                    FontFamily="MaterialFontFamily"
                    FontSize="25"
                    HorizontalTextAlignment="Center"
                    Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.AccountOutline}"
                    TextColor="#5B5B79"
                    VerticalTextAlignment="Center" />
            </Grid>
        </Grid>
    </ContentPage.Content>
