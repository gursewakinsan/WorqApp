<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorqApp.Views.MarketPlace.SetMarketPricePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:WorqApp.Controls"
    xmlns:fontawesome="clr-namespace:WorqApp.Helper"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="True"
    BackgroundColor="#1B1D24"
    NavigationPage.HasNavigationBar="False">
    <Grid
        Margin="0,22,0,0"
        ColumnSpacing="0"
        RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Transparent"
            BorderColor="White"
            BorderWidth="1"
            Command="{Binding CloseCommand}"
            CornerRadius="8"
            Opacity="0.2" />

        <Label
            Grid.Row="0"
            Grid.Column="1"
            FontFamily="MaterialFontFamily"
            FontSize="25"
            HorizontalTextAlignment="Center"
            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronLeft}"
            TextColor="White"
            VerticalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <ScrollView
            Grid.Row="2"
            Grid.ColumnSpan="5"
            VerticalScrollBarVisibility="Never">
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="46" />
                    <RowDefinition Height="7" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontFamily="PoppinsSemiBoldFontFamily"
                    FontSize="33"
                    HorizontalTextAlignment="Start"
                    Text="Pricing"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="25"
                    HorizontalTextAlignment="Start"
                    Opacity="0.42"
                    Text="Set a price"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="13"
                    HorizontalTextAlignment="Start"
                    Opacity="0.42"
                    Text="Title"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <controls:CustomEntry
                    Grid.Row="5"
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="18"
                    Placeholder="Title"
                    PlaceholderColor="Gray"
                    Text="{Binding Title}"
                    TextColor="White" />

                <BoxView
                    Grid.Row="6"
                    Grid.Column="1"
                    BackgroundColor="White"
                    Opacity="0.2" />

                <Label
                    Grid.Row="8"
                    Grid.Column="1"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="13"
                    HorizontalTextAlignment="Start"
                    Opacity="0.42"
                    Text="Price"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <controls:CustomEntry
                    Grid.Row="9"
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="18"
                    Keyboard="Numeric"
                    Placeholder="Price"
                    PlaceholderColor="Gray"
                    Text="{Binding Price}"
                    TextColor="White" />

                <BoxView
                    Grid.Row="10"
                    Grid.Column="1"
                    BackgroundColor="White"
                    Opacity="0.2" />

                <Label
                    Grid.Row="12"
                    Grid.Column="1"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="13"
                    HorizontalTextAlignment="Start"
                    Opacity="0.42"
                    Text="Descriptions"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <Editor
                    Grid.Row="13"
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="18"
                    Placeholder="Descriptions"
                    PlaceholderColor="Gray"
                    Text="{Binding Descriptions}"
                    TextColor="White" />

                <BoxView
                    Grid.Row="14"
                    Grid.Column="1"
                    BackgroundColor="White"
                    Opacity="0.2" />

                <StackLayout
                    Grid.Row="16"
                    Grid.ColumnSpan="3"
                    Padding="24"
                    BackgroundColor="#242A37"
                    Spacing="0">
                    <Grid ColumnSpacing="0" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            FontFamily="PoppinsRegularFontFamily"
                            FontSize="13"
                            HorizontalTextAlignment="Start"
                            Opacity="0.70"
                            Text="Prep time to next event"
                            TextColor="White"
                            VerticalTextAlignment="Start" />

                        <BoxView
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            BackgroundColor="White"
                            Opacity="0.2" />

                        <Grid
                            Grid.Row="3"
                            Grid.ColumnSpan="3"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Minimum time"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding MinimumTime}"
                                ItemsSource="{Binding MinimumTime}"
                                SelectedItem="{Binding SelectedMinimumTime}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <Grid
                            Grid.Row="5"
                            Grid.ColumnSpan="3"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Preparation time"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding PreparationTime}"
                                ItemsSource="{Binding PreparationTime}"
                                SelectedItem="{Binding SelectedPreparationTime}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <Grid
                            Grid.Row="7"
                            Grid.ColumnSpan="3"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Post production time"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding PostProductionTime}"
                                ItemsSource="{Binding PostProductionTime}"
                                SelectedItem="{Binding SelectedPostProductionTime}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <StackLayout
                            Grid.Row="9"
                            Grid.ColumnSpan="3"
                            Orientation="Horizontal">
                            <Label
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Is this a bookable service?"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsBookableService}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                                TextColor="#89C99A"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsBookableServiceCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsBookableService, Converter={StaticResource InverseBoolConverter}}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsBookableServiceCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="10"
                            Grid.ColumnSpan="3"
                            BackgroundColor="White"
                            Opacity="0.2" />

                        <Grid
                            Grid.Row="12"
                            Grid.Column="0"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            IsVisible="{Binding IsBookingTypeControl}"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Booking type"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding BookingType}"
                                ItemsSource="{Binding BookingTypeModel}"
                                SelectedItem="{Binding SelectedBookingTypeModel}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <Grid
                            Grid.Row="12"
                            Grid.Column="2"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            IsVisible="{Binding IsSharedTypeControl}"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Shared type"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding SharedType}"
                                ItemsSource="{Binding SharedTypeModel}"
                                SelectedItem="{Binding SelectedSharedTypeModel}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <StackLayout
                            Grid.Row="13"
                            Grid.ColumnSpan="3"
                            Margin="0,10,0,10"
                            IsVisible="{Binding IsRecurringEventControl}"
                            Orientation="Horizontal">
                            <Label
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Is this a recurring event?"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsRecurringEvent}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                                TextColor="#89C99A"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsRecurringEventCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsRecurringEvent, Converter={StaticResource InverseBoolConverter}}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsRecurringEventCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="14"
                            Grid.ColumnSpan="3"
                            BackgroundColor="White"
                            HeightRequest="1"
                            IsVisible="{Binding IsRecurringEventControl}"
                            Opacity="0.2" />

                        <Grid
                            Grid.Row="15"
                            Grid.ColumnSpan="3"
                            Margin="0,10,0,10"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            IsVisible="{Binding IsEventDateControl}"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Event date"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomDatePicker
                                Grid.Row="1"
                                Grid.Column="0"
                                Date="{Binding SelectedEventDate}"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                Format="yyyy-MM-dd"
                                MaximumDate="{Binding BindMaximumDate}"
                                MinimumDate="{Binding BindMinimumDate}"
                                Placeholder="Event date"
                                TextColor="White" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <Grid
                            Grid.Row="16"
                            Grid.ColumnSpan="3"
                            Margin="0,10,0,10"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            IsVisible="{Binding IsEventStartTimeControl}"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="13"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Time"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Title="Select"
                                Grid.Row="1"
                                Grid.Column="0"
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                ItemDisplayBinding="{Binding WorkTime}"
                                ItemsSource="{Binding EventStartTime}"
                                SelectedItem="{Binding SelectedEventStartTime}"
                                TextColor="White"
                                TitleColor="#797A7D" />

                            <Label
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="20"
                                HorizontalTextAlignment="End"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center" />
                        </Grid>

                        <StackLayout
                            Grid.Row="15"
                            Grid.ColumnSpan="3"
                            Margin="50,10,0,10"
                            IsVisible="{Binding IsMondayControl}"
                            Orientation="Horizontal">
                            <Label
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Monday"
                                TextColor="White"
                                VerticalTextAlignment="Center" />

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsMonday}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                                TextColor="#89C99A"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding WeekdaysCommand}" CommandParameter="Monday" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                Grid.Row="10"
                                Grid.Column="1"
                                FontFamily="MaterialFontFamily"
                                FontSize="44"
                                HorizontalOptions="EndAndExpand"
                                HorizontalTextAlignment="End"
                                IsVisible="{Binding IsMonday, Converter={StaticResource InverseBoolConverter}}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding WeekdaysCommand}" CommandParameter="Monday" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="16"
                            Grid.ColumnSpan="3"
                            Margin="50,0,0,0"
                            BackgroundColor="White"
                            HeightRequest="1"
                            IsVisible="{Binding IsMondayControl}"
                            Opacity="0.2" />

                        <Grid
                            Grid.Row="17"
                            Grid.ColumnSpan="3"
                            Margin="50,10,0,10"
                            Padding="10,10,10,0"
                            BackgroundColor="#1B1D24"
                            ColumnSpacing="5"
                            IsVisible="{Binding IsMonday}"
                            RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
