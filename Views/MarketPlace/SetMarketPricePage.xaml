                            Grid.Row="10"
                            Grid.Column="1"
                            FontFamily="MaterialFontFamily"
                            FontSize="44"
                            HorizontalOptions="EndAndExpand"
                            HorizontalTextAlignment="End"
                            IsVisible="{Binding IsTaxIsIncludedInPrice}"
                            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                            TextColor="#89C99A"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TaxIncludedInPriceCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
                            Grid.Row="10"
                            Grid.Column="1"
                            FontFamily="MaterialFontFamily"
                            FontSize="44"
                            HorizontalOptions="EndAndExpand"
                            HorizontalTextAlignment="End"
                            IsVisible="{Binding IsTaxIsIncludedInPrice, Converter={StaticResource InverseBoolConverter}}"
                            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                            TextColor="#EF793F"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TaxIncludedInPriceCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>

                <BoxView
                    Grid.Row="21"
                    Grid.Column="1"
                    BackgroundColor="White"
                    HeightRequest="1"
                    Opacity="0.2" />

                <Grid
                    Grid.Row="22"
                    Grid.Column="1"
                    Margin="0,10,0,10"
                    BackgroundColor="#1B1D24"
                    IsVisible="{Binding IsTaxIsIncludedInPrice, Converter={StaticResource InverseBoolConverter}}"
                    RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="1" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        FontFamily="PoppinsRegularFontFamily"
                        FontSize="13"
                        HorizontalTextAlignment="Start"
                        Opacity="0.70"
                        Text="Tax"
                        TextColor="White"
                        VerticalTextAlignment="Center" />

                    <controls:CustomEntry
                        Grid.Row="1"
                        BackgroundColor="Transparent"
                        FontFamily="PoppinsRegularFontFamily"
                        FontSize="18"
                        Keyboard="Numeric"
                        Placeholder="Tax"
                        PlaceholderColor="Gray"
                        Text="{Binding TaxIncludedInPrice}"
                        TextColor="White" />

                    <BoxView
                        Grid.Row="2"
                        BackgroundColor="White"
                        Opacity="0.2" />
                </Grid>

                <controls:CustomButton
                    Grid.Row="23"
                    Grid.Column="1"
                    Margin="50"
                    BackgroundColor="White"
                    Command="{Binding AddProfessionalCompanyServiceCommand}"
                    CornerRadius="12"
                    FontFamily="PoppinsSemiBoldFontFamily"
                    FontSize="15"
                    HeightRequest="50"
                    Text="Submit"
                    TextColor="Black" />
            </Grid>
        </ScrollView>

        <controls:CustomBusyIndicator
            Grid.RowSpan="3"
            Grid.ColumnSpan="5"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}" />
    </Grid>
</ContentPage>